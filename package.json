{
  "name": "triode",
  "version": "1.0.0",
  "private": true,
  "description": "triode: three.js-powered live coding engine for 3D creative coding",
  "type": "module",
  "main": "./dist/triode.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/package-entry.js",
      "require": "./dist/triode.js"
    },
    "./src/glsl/glsl-functions.js": {
      "import": "./src/glsl/glsl-functions.js",
      "require": "./src/glsl/glsl-functions.js"
    }
  },
  "unpkg": "./dist/triode.js",
  "files": [
    "dist/",
    "src/",
    "vendor/",
    "examples/",
    "README.md",
    "LICENSE",
    "NOTICE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev-ssl": "vite --https --open /dev/index.html --port 8000",
    "dev": "vite --open /dev/index.html --port 8000",
    "build": "node ./scripts/build/prepare-dist.mjs && vite build",
    "build:debug": "node ./scripts/build/prepare-dist.mjs && BUILD_SOURCEMAP=true vite build",
    "docs:generate": "node ./scripts/docs/generate-api-docs.mjs",
    "docs:verify-sync": "node ./scripts/docs/generate-api-docs.mjs --check",
    "docs:verify-coverage": "node ./scripts/docs/verify-doc-coverage.mjs",
    "docs:check-snippets": "node ./scripts/docs/check-snippets.mjs",
    "docs:check-links": "node ./scripts/docs/check-links.mjs",
    "migrate:report-live-keys": "node ./scripts/migrate/find-unkeyed-live-calls.mjs",
    "migrate:check-live-keys:playground": "node ./scripts/migrate/find-unkeyed-live-calls.mjs --strict site/playground/examples.js",
    "ci:check:live-keys": "npm run migrate:check-live-keys:playground",
    "lint": "eslint --max-warnings=0 \"src/**/*.js\" \"scripts/**/*.mjs\"",
    "format:check": "prettier --check \"scripts/**/*.mjs\" \"docs/**/*.md\" \"README.md\" \"CONTRIBUTING.md\" \"SECURITY.md\"",
    "typecheck": "tsc --noEmit -p ./tsconfig.typecheck.json",
    "test:smoke:canvas": "node ./scripts/smoke/canvas-smoke.mjs",
    "test:smoke:module": "node ./scripts/smoke/module-load-smoke.mjs",
    "test:smoke:regression": "node ./scripts/smoke/regression-smoke.mjs",
    "test:smoke:examples": "node ./scripts/smoke/examples-integrity-smoke.mjs",
    "test:smoke:browser:chromium": "node ./scripts/smoke/browser-smoke.mjs --browser=chromium",
    "test:smoke:browser:firefox": "node ./scripts/smoke/browser-smoke.mjs --browser=firefox",
    "test:smoke:browser:non-global:chromium": "node ./scripts/smoke/browser-non-global-smoke.mjs --browser=chromium",
    "test:smoke:browser:non-global:firefox": "node ./scripts/smoke/browser-non-global-smoke.mjs --browser=firefox",
    "test:smoke:browser:non-global": "npm run test:smoke:browser:non-global:chromium && npm run test:smoke:browser:non-global:firefox",
    "test:smoke:browser:multi-instance:chromium": "node ./scripts/smoke/browser-multi-instance-smoke.mjs --browser=chromium",
    "test:smoke:browser:multi-instance:firefox": "node ./scripts/smoke/browser-multi-instance-smoke.mjs --browser=firefox",
    "test:smoke:browser:multi-instance": "npm run test:smoke:browser:multi-instance:chromium && npm run test:smoke:browser:multi-instance:firefox",
    "test:smoke:browser:examples:chromium": "node ./scripts/smoke/browser-examples-smoke.mjs",
    "test:smoke:browser:examples": "npm run test:smoke:browser:examples:chromium",
    "test:smoke:browser": "npm run test:smoke:browser:chromium && npm run test:smoke:browser:firefox && npm run test:smoke:browser:non-global && npm run test:smoke:browser:multi-instance && npm run test:smoke:browser:examples",
    "test:smoke": "npm run test:smoke:canvas && npm run test:smoke:module && npm run test:smoke:regression && npm run test:smoke:examples",
    "release:verify-meta": "node ./scripts/release/verify-release-meta.mjs",
    "release:checksums": "node ./scripts/release/generate-checksums.mjs",
    "site:build": "node ./scripts/site/build-site.mjs",
    "site:build:versioned": "node ./scripts/site/build-versioned-site.mjs",
    "pack:check": "npm pack --dry-run",
    "ci:check": "npm run release:verify-meta && npm run docs:verify-sync && npm run docs:verify-coverage && npm run docs:check-snippets && npm run docs:check-links && npm run lint && npm run typecheck && npm run build && npm run site:build && npm run test:smoke && npm run pack:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kasparsj/triode.git"
  },
  "keywords": [
    "webgl",
    "regl",
    "graphics",
    "livecoding",
    "synth"
  ],
  "author": "ojack",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/kasparsj/triode/issues"
  },
  "homepage": "https://github.com/kasparsj/triode#readme",
  "dependencies": {
    "gl-mat4": "^1.2.0",
    "glsl-film-grain": "^1.0.4",
    "meyda": "^5.6.3",
    "raf-loop": "^1.1.3",
    "three": "^0.157.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "glslify": "^7.1.1",
    "playwright": "1.56.1",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3",
    "vite": "^6.4.1"
  }
}
